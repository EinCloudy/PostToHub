{
  "manifest_version": 2,
  "name": "PostToHub",
  "version": "2",
  "author": "CloudLessTV",
  "description": "Post your current Website to your NestHub Using HomeAssistant",
  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "assets/style.css",
    "assets/popup.js"
  ]
}

