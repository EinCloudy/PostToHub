{
  "manifest_version": 3,
  "name": "PostToHub",
  "version": "2",
  "description": "Post your current Website to your NestHub Using HomeAssistant",
  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/style.css", "assets/popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
